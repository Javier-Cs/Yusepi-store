<style>
  :root {
    --primary: #00ffe1;
    --secondary: #00e1ff;
	--tercero: #1f8ae7;
    --text: #0f172a;
    --muted: #475569;
  }

  /* FONDO */
  body {
    margin: 0;
    min-height: 100vh;
    font-family: system-ui, -apple-system, BlinkMacSystemFont, sans-serif;
    background: linear-gradient(135deg, var(--primary), var(--secondary));
  }

  /* CONTENEDOR CENTRADO */
  .container {
    min-height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 2rem;
  }

  /* TARJETA */
  .card {
    background: white;
    max-width: 900px;
    width: 100%;
    padding: 3rem;
    border-radius: 1.5rem;
    box-shadow: 0 30px 70px rgba(0, 0, 0, 0.25);

    /* ðŸ”‘ DOS COLUMNAS */
    display: grid;
    grid-template-columns: 1fr 380px;
    gap: 2.5rem;
    align-items: center;
  }

  /* TEXTO */
  .text h1 {
    margin: 0 0 1.2rem;
    font-size: 2.6rem;
    line-height: 1.2;
    color: var(--tercero);
  }

  .text p {
    margin: 0 0 2rem;
    color: var(--muted);
    line-height: 1.6;
    font-size: 1.05rem;
  }

  .text h2 {
    margin: 0 0 0.5rem;
    font-size: 1.1rem;
    color: var(--text);
    font-weight: 700;
  }

  .time {
    font-size: 1.4rem;
    font-weight: 800;
    background: linear-gradient(
      90deg,
      var(--text)
    );
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
  }

  /* ROBOT */
  .image {
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .image img {
    max-width: 300px;
    width: 100%;
    height: auto;
    animation: float 4s ease-in-out infinite;
  }

  /* ANIMACIÃ“N SUAVE */
  @keyframes float {
    0% {
      transform: translateY(0);
    }
    50% {
      transform: translateY(-10px);
    }
    100% {
      transform: translateY(0);
    }
  }

  /* ðŸ“± RESPONSIVE */
  @media (max-width: 768px) {
    .card {
      grid-template-columns: 1fr;
      text-align: center;
    }

    .image img {
      max-width: 220px;
      margin-top: 1.5rem;
    }

    .text h1 {
      font-size: 2.1rem;
    }
  }

  @media (max-width: 768px) {
